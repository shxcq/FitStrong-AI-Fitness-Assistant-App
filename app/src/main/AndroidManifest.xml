<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_adaptive_fore"
        android:supportsRtl="true"
        android:name="james.apt3065.aicoachfitnessapp.FitStrongAI"
        android:theme="@style/Theme.FitStrong">

        <service
            android:name="james.apt3065.aicoachfitnessapp.data.service.WorkoutTimerService"
            android:enabled="true"
            android:foregroundServiceType="mediaPlayback"
            android:exported="true"/>

        <activity
            android:name="james.apt3065.aicoachfitnessapp.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FitStrong">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
